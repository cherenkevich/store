include ../blocks/_

doctype html
html.html.html--cart(lang="en")
    +head
    
    body 
        .app
            .app__header
                .app__column
                    +header
                
            .app__cart
                +cart

            .app__heading
                .app__column
                    h1.heading Cart. <br /><span>2</span> items

            .app__list
                .app__column
                    .list.list--cart
                        .list__row.list__row--item
                            +slot--cart('issue-2-paris', 'Issue 2. Paris. The Humans', 'Paper version', '15')
                                
                        .list__row.list__row--item
                            +slot--cart('issue-5-berlin', 'Issue 5. Berlin', 'PDF-version', '5')

                        .list__row.list__row--shipping
                            +slot--shipping

                        .list__row.list__row--total
                            +slot--total

                        .list__row.list__row--footer 
                            a.rarr(href="delivery.html") Checkout
                
            .app__footer
                .app__column
                    +footer

        +foot