doctype html
html(lang="en")
    +head
    
    body 
        .app
            .app__header
                .app__column
                    +header
                
            .app__cart
                +cart

            .app__heading
                .app__column
                    h1.heading Delivery details

            .app__list
                .app__column
                    form.list(action="success.html" method="" name="delivery")
