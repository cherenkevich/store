                        .list__row
                            input(type="text" name="city" id="city" placeholder="City" required)

                        .list__row
                            input(type="number" name="zip" id="zip" placeholder="Postal code" required inputmode="numeric" pattern="\d*")

                        .list__row
                            input(type="text" name="address" id="address" placeholder="Address" required)

                        .list__row
                            input(type="text" name="name" id="name" placeholder="Name" required)

                        .list__row
                            input(type="email" email="email" id="email" placeholder="E-mail" required)

                        .list__row.list__row--footer 
                            button.rarr Checkout
                
            .app__footer
                .app__column
                    +footer

        +foot